@model IEnumerable<CRUDNet8MVC.Models.Contact>
@{
    ViewData["Title"] = "Contacts List";
}
<h1 class="text-center">Contacts</h1>
<div class="row">
    <div class="offset-sm-9 col-3 mb-3">
        <a asp-action="Create" asp-controller="Home" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa-solid fa-plus"></i> Add User
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>User List</strong></h3>
            </div>
            <div class="card-body ">
                <div class="table-responsive">
                    @if(Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblUsers" width="100%" cellpadding="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(mbox => mbox.Id)</th>
                                    <th>@Html.DisplayNameFor(mbox => mbox.Name)</th>
                                    <th>@Html.DisplayNameFor(mbox => mbox.PhoneNumberMobile)</th>
                                    <th>@Html.DisplayNameFor(mbox => mbox.PhoneNumber)</th>
                                    <th>@Html.DisplayNameFor(mbox => mbox.Email)</th>
                                    <th>@Html.DisplayNameFor(mbox => mbox.CreationDate)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Name)</td>
                                        <td>@Html.DisplayFor(m => item.PhoneNumberMobile)</td>
                                        <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>@Html.DisplayFor(m => item.CreationDate)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square"></i> Edit</a>
                                            <a class="btn btn-primary" asp-action="Detail" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i> Detail</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i> Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>Not Users</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@model CRUDNet8MVC.Models.Contact
@{
    ViewData["Title"] = "Detail Contact";
}
<h1 class="text-center">Contacts</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong> Detail User</strong></h3>
            </div>
            <div class="card-body ">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Name: </strong>@Html.DisplayFor(m => m.Name)</li>
                    <li class="list-group-item"><strong>Phone number: </strong>@Html.DisplayFor(m => m.PhoneNumber)</li>
                    <li class="list-group-item"><strong>Mobile Number: </strong>@Html.DisplayFor(m => m.PhoneNumberMobile)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group-item"><strong>Creation Date: </strong>@Html.DisplayFor(m => m.CreationDate)</li>
                </ul>
                <a asp-action="Index" asp-controller="Home"><i class="fa-solid fa-arrow-right-to-bracket"></i> Back</a>
            </div>
        </div>
    </div>
</div>